<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Selenium Suite" parallel="false">

    <!-- Global listener -->
    <listeners>
        <listener class-name="utils.ReportListener"/>
    </listeners>

    <!-- Test for Chrome -->
    <test name="Google Chrome Headless">
        <parameter name="browser" value="chrome"/>
        <parameter name="headless" value="true"/>
        <classes>
            <class name="tests.GoogleSearchTest"/>
        </classes>
    </test>

    <!-- Test for Firefox (optional) -->
    <test name="Google Firefox Headless">
        <parameter name="browser" value="firefox"/>
        <parameter name="headless" value="true"/>
        <classes>
            <class name="tests.GoogleSearchTest"/>
        </classes>
    </test>

</suite>
